# =================================
# DATABASE CONFIGURATION
# =================================

# PostgreSQL Database Connection (pgvector)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=juridico_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# DATABASE_URL (psycopg3 - nova versão)
# Format: postgresql+psycopg://user:password@host:port/database
DATABASE_URL=postgresql+psycopg://postgres:password@localhost:5432/juridico_db

# =================================
# OLLAMA CONFIGURATION
# =================================

# Ollama API URL
OLLAMA_BASE_URL=http://localhost:11434

# Embedding Model (BGE-M3 para vetorização)
OLLAMA_EMBEDDING_MODEL=bge-m3:latest

# LLM Model (Qwen 2.5 para geração de respostas)
OLLAMA_LLM_MODEL=qwen2.5:7b

# =================================
# APPLICATION CONFIGURATION
# =================================

# FastAPI Application
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# =================================
# VECTOR STORE CONFIGURATION
# =================================

# Collection Names
COLLECTION_PENAL=codigo_penal
COLLECTION_CONSTITUCIONAL=constituicao_federal

# Embedding dimensions (BGE-M3 = 1024)
EMBEDDING_DIMENSION=1024

# =================================
# CHUNKING CONFIGURATION
# =================================

# Chunk size para documentos jurídicos
CHUNK_SIZE=1000

# Overlap entre chunks (mantém contexto)
CHUNK_OVERLAP=200

# =================================
# RAG CONFIGURATION
# =================================

# Número de documentos mais similares a recuperar
TOP_K_RESULTS=5

# Temperatura do LLM (menor = mais preciso/focado)
LLM_TEMPERATURE=0.1